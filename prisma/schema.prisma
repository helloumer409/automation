// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  engineType = "library"
}


// Note that some adapters may set a maximum length for the String type by default, please ensure your strings are long
// enough when changing adapters.
// See https://www.prisma.io/docs/orm/reference/prisma-schema-reference#string for more information
datasource db {
  provider = "sqlite"
  url      = "file:dev.sqlite"
}

model Session {
  id            String    @id
  shop          String
  state         String
  isOnline      Boolean   @default(false)
  scope         String?
  expires       DateTime?
  accessToken   String
  userId        BigInt?
  firstName     String?
  lastName      String?
  email         String?
  accountOwner  Boolean   @default(false)
  locale        String?
  collaborator  Boolean?  @default(false)
  emailVerified Boolean?  @default(false)
  refreshToken        String?
  refreshTokenExpires DateTime?
}

model SyncStats {
  id              String   @id @default(cuid())
  shop            String
  syncStartedAt   DateTime @default(now())
  syncCompletedAt DateTime?
  totalProducts   Int      @default(0)
  totalVariants   Int      @default(0)
  synced          Int      @default(0)
  skipped         Int      @default(0)
  errors          Int      @default(0)
  successRate     Float?
  mapMatched      Int      @default(0)
  mapUsedJobber   Int      @default(0)
  mapUsedRetail   Int      @default(0)
  mapSkipped      Int      @default(0)
  status          String   @default("running") // "running", "completed", "failed"
  errorMessage    String?
  csvDownloadedAt DateTime? // Track when CSV was downloaded for this sync (null = used cached CSV)
  isFullSync      Boolean  @default(true) // true = full sync, false = incremental sync (only unsynced)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}